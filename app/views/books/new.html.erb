<h1>Add new book</h1>

<%= form_tag :action => 'create' do %>
  <p><label for = "book_title">Title</label>:
    <%= text_field 'books', 'title' %></p>

  <p><label for = "author">Author</label>:
    <%= text_field 'books', 'author' %></p>

  <p><label for = "isbn">ISBN</label>:
    <%= text_field 'books', 'isbn' %></p>

  <%= submit_tag "Create" %>

<% end -%>

